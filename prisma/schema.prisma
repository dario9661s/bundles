generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model MergeConfiguration {
  id                Int      @id @default(autoincrement())
  shop              String
  title             String
  lineItemProperty  String
  createdAt         DateTime @default(now())
  metafieldKey      String
  /// [ShopifyNodes]
  extensionProducts Json

  @@unique([shop, lineItemProperty], name: "lineItemPropertyUnique")
}

model CartTransform {
  id              Int      @id @default(autoincrement())
  shop            String
  functionId      String
  cartTransformId String
  createdAt       DateTime @default(now())
}
